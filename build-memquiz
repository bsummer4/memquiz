#!/usr/bin/env tclsh8.5

# Interactivly build some flash cards
#
#     ; ./build-memquiz > quiz
#     Front: This
#     Back: That
#     Front: Hi!
#     Back: Bye!
#     Front ^C
#     ; cat quiz
#     This :: That
#     %%
#     Hi! :: Bye!
#     %%
#     ;

proc add {f b} {
	if {[string length $f] && [string length $b]} {
		puts "$f :: $b"; return 1 }
	return 0 }

set gotone 0
while {![eof stdin]} {
	if {$gotone} { puts %% }
	puts -nonewline stderr {Front: }
	gets stdin front
	puts -nonewline stderr {Back: }
	gets stdin back
	set gotone [add $front $back] }
