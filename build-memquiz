#!/usr/bin/env tclsh8.5

# Interactivly build a quiz.  Example usage:
#
#     ; ./build-memquiz > quiz
#     Front: This
#     Back: That
#     Front: Hi!
#     Back: Bye!
#     Front ^C
#     ; cat quiz
#     This :: That
#     Hi! :: Bye!
#     ;

proc add {f b} {
	if {![string length $f] || ![string length $b]} return
	puts "$f :: $b" }

while {![eof stdin]} {
	puts -nonewline stderr {Front: }
	gets stdin front
	puts -nonewline stderr {Back: }
	gets stdin back
	add $front $back }
